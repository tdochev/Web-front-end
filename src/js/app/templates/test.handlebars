<div class="container">
    <form>
        <div class="form-group">
            <label for="postTitle">Title</label>
            <input type="text" class="form-control" id="postTitle" aria-describedby="emailHelp" placeholder="Enter post title">
        </div>
        <div class="form-group">
            <label for="postAuthor">Author</label>
            <input type="text" class="form-control" id="postAuthor" placeholder="Author">
        </div>
        <div class="form-group">
            <label for="postCategory">Category</label>
            <select class="form-control" id="postCategory">
                {{#each categories}}
                <option>{{this}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <label for="addCategory">Category to add</label>
            <input type="text" class="form-control" id="addCategory" placeholder="Category">
            <button type="button" id="addCategoryBtn" class="btn btn-primary mt-2">Add Category</button>
        </div>
        <div class="form-group">
            <label for="postCongtent">Content</label>
            <textarea class="form-control" id="postCongtent" rows="4"></textarea>
        </div>
